{{- $pages := where site.RegularPages "Type" "bibliography" -}}
{{- warnf "Generating bibliography index with %d entries" (len $pages) -}}
{{- $.Scratch.Add "pagesIndex" slice -}}
{{- range $pages -}}

      {{- $pageData := (dict "title" .Title "href" .Permalink "date" .Params.date ) -}}
      {{- $.Scratch.Add "pagesIndex" $pageData -}}
{{- end -}}
{{- $.Scratch.Get "pagesIndex" | jsonify -}}

